<%-include("partials/header");%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
<label for="pTitle">Post</label>
    <input type="text" class="form-control" name="postTitle" id="pTitle" placeholder="Post Title">
  </div>
  <div class="form-group">
    <label for="pText">Text</label>
    <textarea class="form-control" type="text" name="postText" id="pText" placeholder="Type in new text" rows="5"></textarea>
  </div>
  <button type="submit" class="btn btn-primary mb-2" name="button" >Publish</button>
</form>
<%-include("partials/footer");%>
